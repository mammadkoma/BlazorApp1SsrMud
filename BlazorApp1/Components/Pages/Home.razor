@page "/"
@rendermode InteractiveWebAssembly

<PageTitle>Home</PageTitle>

<p role="status">Current count: @currentCount</p>

<MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="IncrementCount">
    Mud Button
</MudButton>
<p class="mt-5">
    <button @onclick="IncrementCount" class="btn btn-primary">Bootstarp Button</button>
</p>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}